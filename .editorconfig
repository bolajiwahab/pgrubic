# editorconfig.org

root                     = true

[*]
charset                  = utf-8
indent_style             = space
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true

[*.{sql,py,yml,yaml}]
indent_size              = 4

[*.{html,md,js,css,sh}]
indent_size              = 2

[Makefile]
indent_style             = tab
